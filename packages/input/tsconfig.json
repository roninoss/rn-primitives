{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "jsxImportSource": "nativewind",
  "jsx": "preserve",
  "include": [
    "./src/**/*",
    "nativewind-env.d.ts"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string"
    ],
    "types": [
      "react-native-web"
    ],
    "paths": {
      "react-native": [
        "react-native-web"
      ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
