{
  "name": "@rn-primitives/hover-card",
  "version": "1.2.0",
  "description": "Primitive hover card",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dist/hover-card": {
      "import": "./dist/hover-card.mjs",
      "require": "./dist/hover-card.js",
      "types": "./dist/hover-card.d.ts",
      "default": "./dist/hover-card.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "pub:beta": "pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm publish --access public"
  },
  "dependencies": {
    "@radix-ui/react-hover-card": "^1.1.14",
    "@rn-primitives/popover": "workspace:*",
    "@rn-primitives/slot": "workspace:*",
    "@rn-primitives/hooks": "workspace:*",
    "@rn-primitives/utils": "workspace:*",
    "@rn-primitives/types": "workspace:*"
  },
  "devDependencies": {
    "@rn-primitives/portal": "workspace:*",
    "@tsconfig/react-native": "^1.0.1",
    "@types/react": "~19.0.14",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "@rn-primitives/portal": "*",
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  }
}
