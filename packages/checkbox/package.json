{
  "name": "@rnr-method/checkbox",
  "version": "1.1.0",
  "description": "Primitive checkbox",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dist/checkbox": {
      "import": "./dist/checkbox.mjs",
      "require": "./dist/checkbox.js",
      "types": "./dist/checkbox.d.ts",
      "default": "./dist/checkbox.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "pub:beta": "pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm publish --access public"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
    "@rnr-method/hooks": "workspace:*",
    "@rnr-method/slot": "workspace:*",
    "@rnr-method/types": "workspace:*"
  },
  "devDependencies": {
    "@tsconfig/react-native": "^1.0.1",
    "@types/react": "~18.3.12",
    "react": "18.3.1",
    "react-native": "0.76.3",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  }
}
